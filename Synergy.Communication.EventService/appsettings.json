{
  "ConnectionStrings": {
    "EventServiceDbConnection": "Server=localhost; User Id=postgres; Database=CommunicationService; Port=5432; Password=password@123; pooling = true;"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File", "Serilog.Sinks.PostgreSQL" ],
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log.txt"
        }
      },
      {
        "Name": "PostgreSQL",
        "Args": {
          "connectionString": "Host=localhost;Port=5432;Database=CommunicationService;Username=postgres;Password=password@123;",
          "tableName": "logs",
          "schemaName": "logs",
          "needAutoCreateTable": true,
          "batchPostingLimit": 1
        }
      }
    ]
  },
  "IdpConfiguration": {
    "Authority": "https://login-seafarer.synergymarinetest.com"
  },
  "AllowedHosts": "*"
}
